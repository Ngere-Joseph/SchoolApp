@model IEnumerable<SchoolApp.Models.Student>

@{
    ViewData["Title"] = "Registered Student";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FName)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>Department</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ClassRoom.Name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position:fixed; right:25px;" class="text-white">
    <a asp-controller="Student" asp-action="AddOrEdit" class="btn btn-success">
        <i class="bi bi-pencil-square"></i>Add New
    </a>
</div>
